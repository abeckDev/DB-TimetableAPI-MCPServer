{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "restore-solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/AbeckDev.DbTimetable.sln"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "build-solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AbeckDev.DbTimetable.sln",
                "--no-restore"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "restore-solution"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "install-mcp-inspector",
            "type": "shell",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/inspector"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "run-mcp-server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/AbeckDev.DbTimetable.Mcp/AbeckDev.DbTimetable.Mcp.csproj"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Building.*$",
                    "endsPattern": "^.*Now listening on.*$|^.*Application started.*$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "build-and-run-server",
            "dependsOn": [
                "build-solution",
                "run-mcp-server"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}
